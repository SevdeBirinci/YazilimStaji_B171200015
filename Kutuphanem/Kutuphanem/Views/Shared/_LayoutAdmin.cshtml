                        chart.draw(data,
                            {
                                title: "Kitaplar Sütün Grafik",
                                position: "top",
                                fontsize: "14px",
                                pieHole: 0.5,
                                axisY: {
                                    title: "No. of Employees"
                                }

                            });

                    },
                    error: function () {
                        alert("Error loading data! Please try again.");
                    }
                });
            })

        }

    </script>
