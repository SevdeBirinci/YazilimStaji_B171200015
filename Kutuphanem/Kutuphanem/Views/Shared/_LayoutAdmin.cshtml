                        var data = new google.visualization.DataTable();

                        data.addColumn('string', 'KitapAdi');
                        data.addColumn('number', 'Miktar');

                        for (var i = 0; i < chartsdata.length; i++) {
                            data.addRow([chartsdata[i].KitapAdi, chartsdata[i].Miktar]);
                        }

