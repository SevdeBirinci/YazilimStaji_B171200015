@model Kutuphanem.Models.Kitap

@{
    ViewBag.Title = "Create";
}
<h2 style=" margin-left:100px;font-family:Gabriola;font-size:60px;">  <span class="glyphicon glyphicon-book"></span>Yeni Kitap Ekle</h2>
@using (Html.BeginForm("Yeni", "Kitaplar", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h3 style="margin-left:125px; font-family:Gabriola;font-size:30px;">Resim Ekle</h3>
    <input type="file" style="margin-left:125px;" name="UyeResimAdi" accept="Image/*" />
    <br /><div class="form-group" style="font-family:'Californian FB';font-size:22px;">
    @Html.LabelFor(model => model.KitapAdi, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.KitapAdi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.KitapAdi, "", new { @class = "text-danger" })
    </div>
</div>
    <div class="form-group" style="font-family:'Californian FB';font-size:22px;">
        @Html.LabelFor(model => model.Yazar, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Yazar, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Yazar, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group"style="font-family:'Californian FB';font-size:22px;">
        @Html.LabelFor(model => model.Kategori, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Kategori, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Kategori, "", new { @class = "text-danger" })
        </div>
    </div>
 
    <div class="form-group"style="font-family:'Californian FB';font-size:22px;">
        @Html.LabelFor(model => model.Miktar, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Miktar, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Miktar, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group"style="font-family:'Californian FB';font-size:22px;">
        @Html.LabelFor(model => model.Fiyat, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Fiyat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Fiyat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Kitap Listesine Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
